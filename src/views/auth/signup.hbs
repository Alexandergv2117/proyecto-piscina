<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Registro</h3>
                </div>
                <form action="/signup" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <input type="text" name="nombres" placeholder="Nombres" class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="number" name="telefono" placeholder="Telefono Celular" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="email" placeholder="Email" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" minlength="6" placeholder="Password" class="form-control">
                            </div>
                            <div class="form-group">
                                <select name="rol" class="form-control">
                                    <option>Cliente</option>
                                    <option>Trabajador</option>
                                    <option>Administrador</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    SignUp
                                </button>
                            </div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>