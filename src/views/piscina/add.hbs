                                <option>Piscina prefabricada</option>
                                <option>Piscina natural</option>
                                <option>Piscina de arena</option>
                                <option>Piscina de microsemento</option>
                                <option>Piscina transparente</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="volumen" placeholder="Volumen de la piscina" step="0.01">
                         </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>