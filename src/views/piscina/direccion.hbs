<div class="container p-2">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Agregar <br> Dirección</h3>
                </div>
                <div class="card-body">
                    <form action="/piscina/direccion/{{id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="calle" placeholder="Calle" autofocus>
                         </div>
                        
                         <div class="form-group">
                            <input type="number" class="form-control" name="mz" placeholder="MZ">
                         </div>
                         <div class="form-group">
                            <input type="number" class="form-control" name="smz" placeholder="SMZ">
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" name="numint" placeholder="NumInt">
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" name="numext" placeholder="NumExt">
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" name="fracc" placeholder="Fraccionamiento">
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" name="estado" placeholder="Estado">
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" name="ciudad" placeholder="Ciudad">
                         </div>
                         <div class="form-group">
                            <input type="number" class="form-control" name="cp" placeholder="Codigo Postal">
                         </div>
                        
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Añadir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>