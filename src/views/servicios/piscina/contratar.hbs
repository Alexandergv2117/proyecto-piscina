<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Contratar Servicio <br> 
                    {{contratar.nombre}} 
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/servicios/piscina/contratar/{{contratar.idServicio_piscina}}" method="POST">
                        <div class="form-group">
                            <h3 class="h6">Seleccione su piscina</h3>
                            <select name="nombre" class="form-control">
                                {{#each piscinas_cliente}}
                                    <option>{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <h3 class="h6">Seleccione el dia del servicio</h3>
                            <select name="dia" class="form-control">
                                    <option>Lunes</option>
                                    <option>Martes</option>
                                    <option>Miercoles</option>
                                    <option>Jueves</option>
                                    <option>Viernes</option>
                                    <option>Sabado</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <h3 class="h6">Seleccione la hora del servicio</h3>
                            <select name="hora" class="form-control">
                                    <option>9:00</option>
                                    <option>10:30</option>
                                    <option>12:00</option>
                                    <option>13:30</option>
                                    <option>15:00</option>
                                    <option>16:30</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <h3 class="h5">Descripcion del servicio <br>
                            </h3>
                            <p class="h6">{{contratar.descripcion}}</p>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Constratar Servicio</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>