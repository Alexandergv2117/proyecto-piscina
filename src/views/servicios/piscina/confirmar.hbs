<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Confirmar contratacion
                    </h3>
                </div>
                <div class="card-body">
                    <form action="/servicios/piscina/confirmar/{{piscina.idpiscina}}/{{contratar.idServicio_piscina}}/{{piscina.precio_total}}/{{fecha.dia}}/{{fecha.hora}}" method="POST">
                        <div class="form-group">
                            <h3 class="h5">Servicio: {{contratar.nombre}}</h3>
                            <h3 class="h5">Piscina: {{piscina.nombre}}</h3>
                            <h3 class="h5">Dia: {{fecha.dia}}</h3>
                            <h3 class="h5">Hora: {{fecha.hora}}</h3>
                            <h3 class="h5">Total: ${{piscina.precio_total}}</h3>

                        </div>
                        {{#if piscina.direccion}}
                            <div class="form-group">
                                <h6>Se requiere una direccion en la piscina para poder hacer una contratacion</h6>
                                <div class="text-center">
                                    <a href="/piscina/direccion/{{idpiscina}}" class="btn btn-warning">Agregar direccion</a>
                                </div>
                            </div>
                        {{else}}
                        <div class="form-group">
                            <div class="form-group">
                                <button class="btn btn-success btn-block">Confirmar</button>
                            </div>
                        {{/if}}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>