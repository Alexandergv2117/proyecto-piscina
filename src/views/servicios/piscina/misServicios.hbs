<div class="container p-4">
    <div class="row" >
        {{#each misServicios}}
                <div class="col-md-4 m-2">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="card-title h4">Datos del servicio</h3>
                            <hr>
                            <p class="text-left">Servicio: {{nombre_servicio}}</p>
                            <p class="text-left">Descripcion servicio: {{descripcion_servicio}}</p>
                            <p class="text-left">Estado: {{estado_servicio}}</p>
                            <p class="text-left">Precio: ${{precio}} por m³</p>
                            <hr>
                            <h3 class="h4">Datos Piscina</h3>
                            <p class="text-left">Nombre: {{nombre_piscina}}</p>
                            <p class="text-left">Tipo de piscina: {{tipo_piscina}}</p>
                            <p class="text-left">Volumen: {{piscina_volumen}}m³</p>
                            <hr>
                            <h3 class="h4">Visita</h3>
                            <p class="text-left">Dia: {{dia}}     <br>    Hora: {{hora}}</p>
                            
                            <a href="/servicios/piscina/servicio/cancelar/{{idMantenimiento_piscina}}" class="btn btn-danger btn-block mb-1">Cancelar</a>
                        </div>
                    </div>
                </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No tienes Servicio contratados</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>