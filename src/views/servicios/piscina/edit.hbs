<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Editar <br> Servicio piscina</h3>
                </div>
                <div class="card-body">
                    <form action="/servicios/piscina/editar/{{servicio.idServicio_piscina}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre" value="{{servicio.nombre}}" autofocus>
                         </div>
                        <div class="form-group">
                            <input type="number" class="form-control" name="precio" value="{{servicio.precio}}" step="0.01">
                         </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control">{{servicio.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Editar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>